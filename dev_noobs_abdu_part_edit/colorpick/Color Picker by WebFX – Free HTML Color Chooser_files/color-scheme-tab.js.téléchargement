jQuery(function($) {

	FXTools.colorSchemeTabs = {

		init: function() {

			this.setTabsClickHandler();

		},

		getInstance: function() {

			return $('#color_sheme_tab');

		},

		setTabsClickHandler : function() {

			FXTools.colorSchemeTabs.getInstance().find('a').click(FXTools.colorSchemeTabs.onTabClickHandler);

		},

		onTabClickHandler : function(e) {

			FXTools.colorSchemeTabs.unSelectTabs();
			$(this).addClass('active');
			FXTools.setColorScheme($(this).attr('id')); 
			FXTools.colorsShowCase.showColorsScheme(FXTools.getMainColor(), FXTools.getColorScheme());
			e.preventDefault();
		},

		unSelectTabs : function() {

			FXTools.colorSchemeTabs.getInstance().find('a').removeClass('active');

		}

	}

	FXTools.colorSchemeTabs.init();

});